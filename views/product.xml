        <record id="view_order_form_inherit_selling_type" model="ir.ui.view">
            <field name="name">sale.order.line.inherit.selling.type</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="after">
                <field name="quantity_of_type" />
                <field name="sale_type_id" options="{'create': True}" required="1"/>
            </xpath>
            </field>
        </record>

        <record id="action_sale_type_wizard" model="ir.actions.act_window">
            <field name="name">Change Sale Type</field>
            <field name="res_model">sale.type.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field> <!-- opens in a modal window -->
        </record>

        <record id="product_template_action_change_sale_type" model="ir.actions.server">
            <field name="name">Change Sale Type</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="binding_type">action</field>
            <field name="state">code</field>
            <field name="code">
                        action = {
            'type': 'ir.actions.act_window',
            'res_model': 'sale.type.wizard',
            'view_mode': 'form',
            'target': 'new',
            'context': {'active_ids': records.ids},
        }
            </field>
        </record>
</odoo>
