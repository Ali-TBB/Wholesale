<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Type Action -->
    <record id="sale_type_action" model="ir.actions.act_window">
        <field name="name">Sale Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Sale Type to define different selling methods (Unit/Box)
            </p>
        </field>
    </record>
    <!-- Menu Structure -->
    <menuitem id="wholesale_root" name="Wholesale" sequence="0" />
    <menuitem
        id="wholesale_sale_type_root"
        name="Sale Type"
        action="sale_type_action"
        parent="wholesale_root"
        sequence="0"
        groups="base.group_user"
    />

    <!-- Sale Type Tree View -->
    <record id="sale_type_tree" model="ir.ui.view">
        <field name="name">sale.type.tree</field>
        <field name="model">sale.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="quantity" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <!-- Sale Type Form View -->
    <record id="sale_type_form" model="ir.ui.view">
        <field name="name">sale.type.form</field>
        <field name="model">sale.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="quantity" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Add Sale Type to Product Form View -->
    <record id="view_sale_type_product_form" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="sale_type_id" />
            </xpath>
        </field>
    </record>
    <!-- Add Sale Type to Product Tree View -->
    <record id="view_sale_type_product_tree" model="ir.ui.view">
        <field name="name">product.template.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="sale_type_id" />
            </xpath>
        </field>
    </record>
    <!-- Add Sale Type to Order line View -->
    <record id="sale_type_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.type.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='name']" position="after">
                <field name="quantity_of_type" required="1"/>
                <field name="sale_type_id" options="{'create': True}" required="1"/>
            </xpath>
        </field>
    </record>
</odoo>