<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pack Product Action -->
    <record id="pack_product_action" model="ir.actions.act_window">
        <field name="name">Pack</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pack.product</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Pack
            </p>
        </field>
    </record>
    <!-- Menu Structure -->
    <menuitem
        id="wholesale_pack_root"
        name="pack"
        action="pack_product_action"
        parent="wholesale_root"
        sequence="0"
        groups="base.group_user"
    />

    <!-- Pack Product Tree View -->
    <record id="pack_product_tree" model="ir.ui.view">
        <field name="name">pack.product.tree</field>
        <field name="model">pack.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- Pack Product Form View -->
    <record id="pack_product_form" model="ir.ui.view">
        <field name="name">pack.product.form</field>
        <field name="model">pack.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <notebook>
                        <page string="product">
                            <field name="line_ids" context="{'default_display_type': 'product'}"
                                editable="bottom">
                                <tree string="Pack Product Lines" editable="bottom">
                                    <field name="product_id" />
                                    <field name="sale_type_id" />
                                    <field name="quantity" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Add (add a pack) To Order View -->

    <record id="sale_order_line_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherit.pack</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="replace">
                <field name="product_or_pack_ref" widget="reference"/>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="domain">[('is_pack_line', '=', False)]</attribute>
            </xpath>
        </field>
    </record>


</odoo>